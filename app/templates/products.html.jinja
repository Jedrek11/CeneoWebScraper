{% endblock title %}
{% block content %}
<div class="col">
    <ul class="list-group">
        {% for product in products %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="{{url_for('product', code=product.product_code)}}">{{product.product_code}}</a>
                <span class="badge bg-primary rounded-pill">{{product.opinions_count}}</span>
                <span class="badge bg-danger rounded-pill">{{product.cons_count}}</span>
                <span class="badge bg-success rounded-pill">{{product.pros_count}}</span>
                <span class="badge bg-secondary rounded-pill">{{product.average_score|round(2)}}</span>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock content %}